{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Target modern browsers */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* Output details */
    "sourceMap": true,
    "declaration": false,
    "jsx": "preserve",
    "verbatimModuleSyntax": true,

    /* Nice to have */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
